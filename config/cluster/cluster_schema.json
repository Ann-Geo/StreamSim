{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ClusterIn",
    "type": "object",
    "description": "Cluster configuration options",
    "properties": {
      "clusterType": {
        "type": "string",
        "description": "Cluster type"
      },
      "clusterName": {
        "type": "string",
        "description": "Cluster name"
      },
      "numNodes": {
        "type": "integer",
        "minimum": 0,
        "description": "Number of nodes in the cluster"
      },
      "deployCluster": {
        "type": "boolean",
        "description": "Flag indicating whether to deploy the cluster"
      },
      "shutdownCluster": {
        "type": "boolean",
        "description": "Flag indicating whether to shutdown the cluster"
      },
      "infoCluster": {
        "type": "boolean",
        "description": "Flag indicating whether to fetch cluster info"
      }
    },
    "required": ["clusterType", "clusterName", "numNodes"],
    "oneOf": [
    { "required": ["deployCluster"] },
    { "required": ["shutdownCluster"] },
    { "required": ["infoCluster"] }
  ]
}
